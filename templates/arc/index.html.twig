{% extends 'base.html.twig' %}

{% block title %}Arc index{% endblock %}

{% block body %}
    <h1>Arc index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Geoloc</th>
                <th>UserId</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for arc in arcs %}
            <tr>
                <td>{{ arc.id }}</td>
                <td>{{ arc.type }}</td>
                <td>{{ arc.geoloc }}</td>
                <td>{{ arc.userId }}</td>
                <td>
                    <a href="{{ path('app_arc_show', {'id': arc.id}) }}">show</a>
                    <a href="{{ path('app_arc_edit', {'id': arc.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_arc_new') }}">Create new</a>
{% endblock %}
